<Window x:Class="MisProjekat.Forms.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MisProjekat"
             mc:Ignorable="d" 
             Width="300" Height="600">
    <StackPanel Orientation="Vertical" Margin="15,15">
        <Label Target="UsernameBox">Korisničko ime:</Label>
        <TextBox Name="UsernameBox" Margin="0,5"/>
        <Label Target="PasswordBox">Lozinka:</Label>
        <PasswordBox Name="PasswordBox" Margin="0,5"/>
        <Button Click="LoginClick" Margin="0,5" IsDefault="True">Prijavite se</Button>
        <Button Click="RegisterClick" Margin="0,5">Registrujte se</Button>
    </StackPanel>
</Window>
