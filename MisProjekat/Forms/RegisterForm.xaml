<Window x:Class="MisProjekat.Forms.RegisterForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MisProjekat"
             mc:Ignorable="d"  
             Width="300" Height="600"
             Title="Registracija">
    <StackPanel Margin="10">
        <Label>Ime:</Label>
        <TextBox Name="FirstNameText" Margin="0,5"/>
        <Label>Prezime:</Label>
        <TextBox Name="LastNameText" Margin="0,5"/>
        <Label>Korisničko ime:</Label>
        <TextBox Name="UsernameText" Margin="0,5"/>
        <Label>Lozinka:</Label>
        <PasswordBox Name="PasswordText" Margin="0,5"/>
        <Label>Ponovite lozinku:</Label>
        <PasswordBox Name="PasswordRepeatText" Margin="0,5"/>
        <Button Click="ConfirmClick" Margin="0,5">Potvrdi</Button>
    </StackPanel>
</Window>
